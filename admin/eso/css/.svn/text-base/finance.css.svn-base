@import "tabs.css";
@import "tables.css";

body
{
     font: 100% verdana, arial, sans-serif;
     background-color: #fff;
     margin: 0;
}

h1
{
	margin: .25em 2em .5em 2em;
}

#content
{
	margin: .25em 1em .25em 1em;
}

#footer
{
	margin: 0;
	padding: .25em 1em .25em 1em;
	border-top: 1px solid #A4A4A4;
	color: #A4A4A4;
}

.error
{
	color: red;
	background-color: #F6CECE;
	border: 1px solid red;
	padding-left: 2em;
	padding-right: 2em;
	padding-bottom: 1em;
}

.error h2
{
	size: 1.4em;
	text-align: center;
	margin-top: 0px;
	margin-bottom: 0px;
}

@import "popup.css";