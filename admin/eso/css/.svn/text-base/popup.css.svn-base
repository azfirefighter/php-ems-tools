#clearing
{
	clear: both;
}

/* POPUP STUFF */

.popup
{
	border: solid 1px #333;
        font-family: Tahoma, Verdana, Arial, Helvetica, sans-serif;
        font-size: 12px;
        display: none;
        position: absolute;
        width: 500px;
        z-index: 60;
}

#popuptitle
{
        background: blue;
        color: white;
        font-weight: bold;
        height: 15px;
        padding: 5px;
	# width: auto;
	float: left;
}

#popuptitleArea
{
	background: blue;
}

#popupCloseBox
{
	float: right;
	text-align: right;
        background: gray;
	width: auto;
        color: white;
        font-weight: bold;
        height: 15px;
        padding: 5px;
	border: 2px solid black;
	font-size: 1.5em;
}
     
#popupbody
{
        background: #ddd;
        padding: 5px;
}

#popup { top: 200px; left: 300px; }